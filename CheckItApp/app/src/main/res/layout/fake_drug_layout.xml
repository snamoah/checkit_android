<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_height="match_parent"
    style="@style/DialogTheme">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:text="Drug is fake"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Make a report"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:minWidth="300dp"
        android:id="@+id/pharmacy_name"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:hint="Name of Pharmacy"
        android:background="@drawable/txtbox"
        android:singleLine="true"
        android:padding="5dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:minWidth="300dp"
        android:id="@+id/pharmacy_location"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:hint="Location of pharmacy"
        android:background="@drawable/txtbox"
        android:singleLine="true"
        android:padding="5dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:minWidth="300dp"
        android:id="@+id/nearest_landmark"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:hint="Nearest Landmark"
        android:background="@drawable/txtbox"
        android:singleLine="true"
        android:padding="5dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Submit Report"
        android:textColor="@color/white_grey"
        android:background="@drawable/button_state"
        android:id="@+id/submit_report"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/codeBox"
        android:layout_gravity="center"/>
</LinearLayout>